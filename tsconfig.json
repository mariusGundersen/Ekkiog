{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2015",
    "target": "es2015",
    "strict": true,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "./src/js/**/*.ts",
    "./src/js/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}