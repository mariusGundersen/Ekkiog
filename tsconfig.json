{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2015",
    "target": "es2015",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}